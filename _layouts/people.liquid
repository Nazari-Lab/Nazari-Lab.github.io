<main class="container my-5">
  <h1 class="mb-4">{{ page.title }}</h1>
  <div class="row">
    {% assign people_pages = site.pages | where:"layout","person" | sort:"title" %}
    {% for person in people_pages %}
      {% include people_cards.liquid person=person %}
    {% endfor %}
  </div>
</main>

