---
layout: default
---
<main class="container my-5">
  <div class="row">
    <div class="col-md-4 text-center">
      {% include figure.liquid
         path=page.image
         class="img-fluid rounded mb-3"
         sizes="200px" %}
      <div class="d-flex align-items-center gap-5 fs-1">
        {% if person.email %}
          <a href="mailto:{{ person.email }}" aria-label="Email">
            <i class="ti ti-mail"></i>
          </a>
        {% endif %}
        {% if person.phone %}
          <a href="tel:{{ person.phone }}" aria-label="Phone">
            <i class="ti ti-phone"></i>
          </a>
        {% endif %}
        {% if person.li_username %}
          <a href="https://linkedin.com/in/{{ person.li_username }}" aria-label="LinkedIn">
            <i class="ti ti-brand-linkedin"></i>
          </a>
        {% endif %}
        {% if person.scholar_userid %}
          <a href="https://scholar.google.com/citations?user={{ person.scholar_userid }}" aria-label="Google Scholar">
            <i class="ai ai-google-scholar"></i>
          </a>
        {% endif %}
        {% if person.orcid_id %}
          <a href="https://orcid.org/{{ person.orcid_id }}" aria-label="ORCID">
            <i class="ai ai-orcid"></i>
          </a>
        {% endif %}
        {% if person.gh_username %}
          <a href="https://github.com/{{ person.gh_username }}" aria-label="GitHub">
            <i class="ti ti-brand-github"></i>
          </a>
        {% endif %}
      </div>
    </div>
    <div class="col-md-8">
      <h1>{{ page.title }}</h1>
      {{ content }}
    </div>
  </div>
</main>
