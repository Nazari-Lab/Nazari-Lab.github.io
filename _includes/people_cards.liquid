<div class="col-12 col-md-6 mb-4">
  <a href="{{ person.url }}" class="text-decoration-none text-body">
    <div class="card h-100 d-flex flex-row align-items-center">
      
      <!-- thumbnail -->
      <div class="flex-shrink-0" style="width: 120px;">
        {% include figure.liquid
           path=person.image
           class="img-fluid"
           sizes="120px" %}
      </div>
      
      <!-- body -->
      <div class="card-body">
        <h5 class="card-title">{{ person.title }}</h5>
        
        {%- if person.description -%}
          <p class="card-text text-muted mb-2">{{ person.description }}</p>
        {%- endif -%}
        
        <!-- icon row: fs-4 makes icons ~1.5rem, gap-3 gives ~1rem between them -->
        <div class="d-flex align-items-center gap-3 fs-4">
          
          {%- if person.email -%}
            <a href="mailto:{{ person.email }}" aria-label="Email">
              <i class="ti ti-mail"></i>
            </a>
          {%- endif -%}
          
          {%- if person.phone -%}
            <a href="tel:{{ person.phone }}" aria-label="Phone">
              <i class="ti ti-phone"></i>
            </a>
          {%- endif -%}

          {%- if person.li_username -%}
            <a href="https://linkedin.com/in/{{ person.li_username }}" class="mx-1" aria-label="linkedin">
              <i class="ti ti-brand-linkedin"></i>
            </a>
          {%- endif -%}

          {%- if person.scholar_userid -%}
            <a href="https://scholar.google.com/citations?user={{ person.scholar_userid }}" aria-label="Google Scholar">
              <i class="ai ai-google-scholar"></i>
            </a>
          {%- endif -%}
          
          {%- if person.orcid_id -%}
            <a href="https://orcid.org/{{ person.orcid_id }}" aria-label="ORCID">
              <i class="ai ai-orcid"></i>
            </a>
          {%- endif -%}
          
          {%- if person.gh_username -%}
            <a href="https://github.com/{{ person.gh_username }}" aria-label="GitHub">
              <i class="ti ti-brand-github"></i>
            </a>
          {%- endif -%}
          
        </div>
      </div>
    </div>
  </a>
</div>
